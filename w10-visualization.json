{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Malaysia's Population from 2015-2024 (in '000)",
    "description": "A population pyramid for Malaysia, showing population distribution by age and gender.",
    "data": { 
      "url": "https://raw.githubusercontent.com/qchu0005/FIT3179-W10/refs/heads/main/data/updated_population_data.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "year_selection",
        "bind": {
          "input": "select",
          "options": [
            null,2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023
          ],
          "labels": [
            "Show All","2015", "2016", "2017", "2018", "2019",
            "2020", "2021", "2022", "2023"
          ],
          "name": "Select Year: "
        }
      },
      {
        "name": "population_selector",
        "value": 500,  
        "bind": {
          "input": "range",
          "min": 0,
          "max": 2000,  
          "step": 10,
          "name": "Minimum Population (in '000): "
        }
      }
    ],
    "transform": [
      {
        "calculate": "year(datum.year)",  
        "as": "year"
      },
      {
        "filter": "year_selection == null || datum.year == year_selection"
      },
      {
        "filter": "datum.population >= population_selector"  
      },
      {
        "calculate": "datum.sex == 'male' ? -datum.population : datum.population",
        "as": "signed_population"
    }
    ],
    "width": 300,
    "height": 300,
    "layer": [
      {
        "mark": "bar",
        "encoding": {
          "y": {
            "field": "age",
            "type": "ordinal",
            "sort": [
              "0-4", "5-9", "10-14", "15-19", "20-24", "25-29", "30-34",
              "35-39", "40-44", "45-49", "50-54", "55-59", "60-64", "65-69",
              "70-74", "75-79", "80-84"
            ],
            "axis": {"title": "Age Range"}
          },
          "x": {
            "field": "signed_population",
            "type": "quantitative",
            "axis": {
              "title": "Population ('000)",
              "format": "s"
            }
          },
          "color": {
            "field": "sex",
            "type": "nominal",
            "scale": {
              "domain": ["male", "female"],
              "range": ["#1f77b4", "#ff7f0e"]
            },
            "legend": {"title": "Gender"}
          },
          "tooltip": [
            {"field": "year", "type": "ordinal", "title": "Year"},
            {"field": "age", "type": "ordinal", "title": "Age Range"},
            {"field": "population", "type": "quantitative", "title": "Population ('000)"}
          ]
        }
      },
      {
        "mark": "text",
        "encoding": {
          "text": {
            "field": "signed_population",
            "type": "quantitative",
            "format": ".2s"
          },
          "x": {
            "field": "signed_population",
            "type": "quantitative"
          },
          "y": {"field": "age", "type": "ordinal"},
          "color": {"value": "black"},
          "opacity": {
            "condition": {
              "test": "year_selection != null",
              "value": 1
            },
            "value": 0
          }
        }
      }
    ]
  }
